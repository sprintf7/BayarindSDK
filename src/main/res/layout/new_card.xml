<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <RelativeLayout
        android:id="@+id/block_form"
        android:layout_margin="10sp"
        android:elevation="40sp"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:background="@drawable/round_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginRight="20sp"
                android:text="Card Detail"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="20sp"
                android:background="@color/cloud"
                android:layout_width="match_parent"
                android:layout_height="2sp"></View>

            <TextView
                android:layout_marginRight="20sp"
                android:text="Card Number"
                android:alpha=".7"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/card_no"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="18sp"
                android:layout_marginBottom="15sp"
                android:inputType="phone"
                android:textColor="@color/greyDark"
                android:drawableRight="@drawable/bt_ic_unknown"
                android:hint="Card Number"
                android:maxLength="20"
                android:background="@color/cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/token"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="18sp"
                android:background="@color/cloud"
                android:alpha=".7"
                android:drawableRight="@drawable/bt_ic_unknown"
                android:layout_marginBottom="15sp"
                android:text="Card Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginRight="20sp"
                android:text="Card Expiry Date"
                android:alpha=".7"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="15sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_marginRight="5sp"
                    android:id="@+id/exp_month"
                    android:background="@color/cloud"
                    android:entries="@array/months"
                    android:prompt="@string/month_promp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>

                <Spinner
                    android:background="@color/cloud"
                    android:id="@+id/exp_year"
                    android:prompt="@string/year_promp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>

            </LinearLayout>

            <EditText
                android:id="@+id/cvc"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:layout_marginLeft="5sp"
                android:textSize="18sp"
                android:layout_marginBottom="15sp"
                android:inputType="numberPassword"
                android:textColor="@color/greyDark"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:hint="CVC"
                android:layout_gravity="center_horizontal"
                android:background="@color/cloud"
                android:layout_width="140sp"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="Customer Detail"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <View
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="20sp"
                    android:background="@color/cloud"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"></View>

            <EditText
                android:id="@+id/customer_name"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="18sp"
                android:layout_marginBottom="15sp"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/greyDark"
                android:hint="Name on card"
                android:drawableRight="@drawable/ic_account_circle_black_24dp"
                android:background="@color/cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/customer_email"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:layout_marginBottom="15sp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColor="@color/greyDark"
                android:hint="Email"
                android:background="@color/cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


                <Button
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_pay"
                    android:theme="@style/Bayarind.ButtonTeal"
                    android:text="Pay Now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>