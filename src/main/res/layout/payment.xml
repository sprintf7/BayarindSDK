<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/coordinatorLayout"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="visible">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:title="@string/payment_title"
            app:titleEnabled="true"
            app:contentScrim="@color/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            android:background="@color/colorPrimaryDark"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/main.backdrop"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:fitsSystemWindows="true"
                android:layout_marginTop="70sp"
                android:src="@drawable/bayarind_white_logo"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1.0" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/payment_title"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCancel"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:theme="@style/AppTheme.CancelButtonToolbar"
                        android:text="cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="50dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="30sp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:elevation="15sp"
                app:cardElevation="15sp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trx_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="Transaction Detail"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginLeft="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="80sp"
                        android:layout_height="2sp"
                        android:layout_marginLeft="30sp"
                        android:layout_marginBottom="5sp"
                        android:background="@color/sprintSoftBlue"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/label_icon"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:padding="5sp"
                            android:src="@drawable/ic_label_black_24dp"
                            android:tint="@color/greyDarker" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_toRightOf="@id/label_icon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:id="@+id/transactionNo_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textColor="@color/greyDarker"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Invoice Number"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginLeft="25sp"
                        android:alpha=".4"
                        android:background="@color/grey"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/money_icon"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:padding="5sp"
                            android:src="@drawable/ic_local_atm_black_24dp"
                            android:tint="@color/greyDarker" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_toRightOf="@id/money_icon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:id="@+id/amount_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1.000.000"
                                android:textColor="@color/greyDarker"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="IDR"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginLeft="25sp"
                        android:alpha=".4"
                        android:background="@color/grey"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/account_icon"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:padding="5sp"
                            android:src="@drawable/ic_account_circle_black_24dp"
                            android:tint="@color/greyDarker" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_toRightOf="@id/account_icon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nazzar Ilhammi Cahya"
                                android:id="@+id/customerName_view"
                                android:textColor="@color/greyDarker"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/customerEmail_view"
                                android:text="nazzar.cahya@sprintasia.co.id"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginLeft="25sp"
                        android:alpha=".4"
                        android:background="@color/grey"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/merchant_icon"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:padding="5sp"
                            android:src="@drawable/ic_store_black_24dp"
                            android:tint="@color/greyDarker" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_toRightOf="@id/merchant_icon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Merchant Name"
                                android:id="@+id/merchantName_view"
                                android:textColor="@color/greyDarker"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Branch Name"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginLeft="25sp"
                        android:alpha=".4"
                        android:background="@color/grey"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/address_icon"
                            android:layout_width="45sp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5sp"
                            android:src="@drawable/ic_place_black_24dp"
                            android:tint="@color/greyDarker"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/address_icon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jl. Raya RS. Fatmawati No. 7 Gandaria Utara"
                                android:textColor="@color/greyDarker"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DKI Jakarta"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="12140, Indonesia"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginLeft="25sp"
                        android:alpha=".4"
                        android:background="@color/grey"/>

                    <LinearLayout
                        android:id="@+id/layout_payment_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15sp">

                            <TextView
                                android:id="@+id/cc_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Card Information"
                                android:layout_marginBottom="5sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/title_pager"
                                android:layout_below="@id/cc_title"
                                android:layout_width="80sp"
                                android:layout_height="2sp"
                                android:layout_marginLeft="15sp"
                                android:layout_marginBottom="20sp"
                                android:background="@color/sprintSoftBlue"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_below="@id/title_pager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/cardNumberLayout"
                                    android:theme="@style/AppTheme.TextPayment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10sp"
                                    android:textColor="@color/greyDarker"
                                    android:textColorHint="@color/grey">

                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/cardNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                                        android:drawablePadding="20sp"
                                        android:drawableStart="@drawable/ic_credit_card_black_24dp"
                                        android:drawableRight="@drawable/bt_ic_unknown"
                                        android:drawableEnd="@drawable/bt_ic_unknown"
                                        android:hint="@string/cc_hint"
                                        android:imeOptions="actionNext"
                                        android:inputType="phone"
                                        android:textColor="@color/greyDarker"
                                        android:textColorHint="@color/grey"
                                        android:textCursorDrawable="@null"
                                        app:backgroundTint="@color/grey" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/expiryDateLayout"
                                        android:layout_width="0sp"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/AppTheme.TextPayment"
                                        android:layout_weight="1"
                                        android:textColor="@color/greyDarker"
                                        android:textColorHint="@color/grey">

                                        <android.support.v7.widget.AppCompatEditText
                                            android:id="@+id/expiryDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/ic_date_range_black_24dp"
                                            android:drawablePadding="20sp"
                                            android:drawableStart="@drawable/ic_date_range_black_24dp"
                                            android:hint="@string/exp_hint"
                                            android:imeOptions="actionNext"
                                            android:clickable="true"
                                            android:inputType="date"
                                            android:textColor="@color/greyDarker"
                                            android:textColorHint="@color/grey"
                                            android:textCursorDrawable="@null"
                                            android:focusable="false"
                                            app:backgroundTint="@color/grey" />
                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/cvcLayout"
                                        android:layout_width="0sp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:theme="@style/AppTheme.TextPayment"
                                        android:textColor="@color/greyDarker"
                                        android:textColorHint="@color/grey">

                                        <android.support.v7.widget.AppCompatEditText
                                            android:id="@+id/cvc"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                                            android:drawablePadding="20sp"
                                            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                                            android:hint="@string/cvv_hint"
                                            android:imeOptions="actionNext"
                                            android:includeFontPadding="false"
                                            android:inputType="numberPassword"
                                            android:textColor="@color/greyDarker"
                                            android:textColorHint="@color/grey"
                                            android:textCursorDrawable="@null"
                                            app:backgroundTint="@color/grey" />
                                    </android.support.design.widget.TextInputLayout>

                                </LinearLayout>

                                <Button
                                    android:id="@+id/btnPay"
                                    android:layout_marginTop="25sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Purchase"
                                    android:theme="@style/AppTheme.PayButton"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/footer" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>