<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:elevation="2sp"
        android:orientation="vertical"
        android:background="@drawable/card_list_bg"
        android:padding="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cc_logo_view"
            android:src="@drawable/bt_ic_unknown"
            android:layout_width="55sp"
            android:layout_height="35sp" />

        <TextView
            android:id="@+id/exp_date_view"
            android:layout_toRightOf="@id/cc_logo_view"
            android:layout_marginTop="10sp"
            android:textSize="14sp"
            android:gravity="right"
            android:text="05 / 2012"
            android:layout_marginRight="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="10sp"
            android:id="@+id/block_card_info"
            android:layout_below="@id/cc_logo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cc_no_view"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="10sp"
                android:alpha=".8"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="4111 **** **** 1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="5sp"
                android:layout_below="@id/cc_no_view"
                android:id="@+id/btn_delete"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_width="30sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_below="@id/cc_no_view"
                android:layout_toLeftOf="@id/btn_delete"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cc_name_view"
                    android:text="Customer name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cc_email_view"
                    android:layout_below="@id/cc_name_view"
                    android:text="customer@email.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>