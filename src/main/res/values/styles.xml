<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BayarindTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Bayarind.ButtonPrimary" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>
    <style name="Bayarind.ButtonTeal" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorTeal</item>
        <item name="android:colorButtonNormal">@color/colorTeal</item>
    </style>
    <style name="Bayarind.ButtonGrey" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/greyDark</item>
        <item name="colorButtonNormal">@color/cloud</item>
        <item name="android:colorButtonNormal">@color/cloud</item>
    </style>
</resources>